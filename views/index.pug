            section.babebox
              - for (var i = 0; i < data.length; i++) {
                  section.images(id='image' + data[i].id)
                    img(src=data[i].img, width='200px', height='200px', alt='')
                    section.name
                      h4 Name: #{data[i].description}
                    section.rating(id=data[i].id)
                      h5 Rating:
                        span(id='value-' + data[i].id) #{' ' + data[i].rating}
                      form
                        fieldset.rating-box
                          input(id="star5-" + (i+1), type='radio', name='rating', value='5', checked=data[i].rating===5)
                          label(for='star5-' + (i+1), title='Rocks!')
                          input(id="star4-" + (i+1) type='radio', name='rating', value='4', checked=data[i].rating===4)
                          label(for='star4-' + (i+1), title='Pretty good')
                          input(id="star3-" + (i+1), type='radio', name='rating', value='3', checked=data[i].rating===3)
                          label(for='star3-' + (i+1), title='Meh')
                          input(id='star2-' + (i+1) type='radio', name='rating', value='2', checked=data[i].rating===2)
                          label(for='star2-' + (i+1), title='Kinda bad')
                          input(id='star1-' + (i+1) type='radio', name='rating', value='1', checked=data[i].rating===1)
                          label(for='star1-' + (i+1), title='Sucks big time')
              - }
